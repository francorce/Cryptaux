{% extends 'baselogin.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<div class="main">

        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="{{asset('img/logo.png')}}" alt="sing up image"></figure>
                    </div>
                    <div class="signin-form">
                        <h2 class="form-title">Connexion</h2>
                        <form method="POST" class="register-form" id="login-form">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                            <div class="form-group">
                                <label for="inputEmail"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >
                            <div class="form-group form-button">
                                <input type="submit" id="signin" class="form-submit" value="Connexion"/>
                            </div>
                        </form>
                    </div>
                </div>
                <div style="text-align:center;padding-bottom: 50px;">
                    <a href="register" class="signup-image-link">Cr√©er un compte</a>
                </div>
            </div>
        </section>

    </div>
{% endblock %}
